<apex:page standardController="Admission_Form__c" extensions="NewEventController" action="{!scheduleobservationfirst}" lightningStylesheets="true" standardStylesheets="true" sidebar="true" showHeader="true">
    <apex:form >
    <apex:slds />
    <apex:pageBlock title="Observation Re-Scheduleds">

    <apex:pageMessages />
    <apex:pageBlockSection title="Re-Scheduled" id="eventInformation" collapsible="false" columns="2">
        <apex:inputfield value="{!ev.Subject}"/>
        <apex:outputField value="{!ev.WhatId}"/>
        <apex:inputfield value="{!ev.StartDateTime}" required="true" />
        <apex:inputfield value="{!ev.EndDateTime}" required="true"/>    
       <!-- <apex:inputField value="{!ev.Location}"/>--> 
        <apex:outputfield value="{!ev.School_Institution__c}" label="Location"/>
        <apex:inputField value="{!ev.OwnerId}"/>
        <apex:inputfield value="{!ev.Description}"/>
        <center>
            <b> <apex:commandButton action="{!ObservationRescheduled}" value="Submit"  style="width:180px;height:40px;margin-top:3em; margin-left:83%;margin-bottom:3em;background-color:lightblue;font-size:16px" styleClass="slds-button slds-button_success"/>
            </b>        
        </center>
    </apex:pageBlockSection>
