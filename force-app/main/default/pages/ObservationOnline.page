<apex:page standardController="Admission_Form__c" extensions="NewEventController" action="{!alreadycalledforobservation}" lightningStylesheets="true" standardStylesheets="true" sidebar="true" showHeader="true">
    <apex:form >
    <apex:slds />
    <apex:pageBlock title="Observation Online">

    <apex:pageMessages />
    <apex:pageBlockSection title="Scheduled" id="eventInformation" collapsible="false" columns="2" >
        <apex:inputfield value="{!ev.Subject}"/>
        <apex:outputField value="{!af.Name}"/>
        <apex:inputField value="{!ev.StartDateTime}" showDatePicker="true" required="true"/> 
        <apex:inputfield value="{!ev.EndDateTime}" showDatePicker="true" required="true"/>
       
        <apex:outputfield value="{!af.School_Institution__c}" label="Location"/>
        <apex:inputField value="{!ev.OwnerId}" required="true"/>
        <apex:inputfield value="{!ev.Description}"/>
        </apex:pageBlockSection>
        <div style="text-align:center">
            <apex:commandButton action="{!observationOnline}" value="Submit" style="width:180px;height:40px;margin-top:3em;margin-bottom:3em;margin-left:-20%;background-color:lightblue;font-size:16px" />
        </div>
        
