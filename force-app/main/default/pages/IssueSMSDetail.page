<apex:page id="SMSDetails" standardController="Case" extensions="IssueSMSDetailsController" lightningStylesheets="true" sidebar="false" showHeader="false">
        <apex:pageBlock title="Enquiry SMS History" rendered="{!smsgupshups.size > 0}">
            <apex:pageBlockTable value="{!smsgupshups}" var="sms">
                <apex:column value="{!sms.Contact_Name_Number__c}"/>
                <apex:column value="{!sms.Sender_Number__c}"/>
                <apex:column value="{!sms.Message__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
        <apex:pageBlock title="SMS History"  rendered="{!smsgupshups.size == 0}">
            <b>There is no SMS history available.</b>
        </apex:pageBlock>
</apex:page>